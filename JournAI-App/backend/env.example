# JWT Secret for token signing (change this in production!)
JWT_SECRET=your_super_secret_jwt_key_here

# OpenAI API Key (optional - if not provided, will use rule-based planning)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Port (default: 3000)
PORT=3000

# Database configuration
# Set DB_CLIENT to 'postgres' for PostgreSQL or 'sqlite' for SQLite
DB_CLIENT=postgres

# RDS PostgreSQL Configuration
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=journai
DB_USER=journai
DB_PASSWORD=your-secure-password

# S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# Optional: For local development with LocalStack or MinIO
# S3_ENDPOINT=http://localhost:4566
# S3_FORCE_PATH_STYLE=true
