# JWT Secret for token signing (change this in production!)
JWT_SECRET=your_super_secret_jwt_key_here

# OpenAI API Key (optional - if not provided, will use rule-based planning)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Port (default: 3000)
PORT=3000

# Database configuration (optional; defaults to SQLite if not set)
# Set DB_CLIENT=postgres to use the Postgres container defined in docker-compose
DB_CLIENT=postgres
DB_HOST=db
DB_PORT=5432
DB_NAME=journai
DB_USER=journai
DB_PASSWORD=journai
